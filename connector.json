{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": [
        "dev", "prod"
      ]
    }
  },
  "variables": {
    "TemplateUrl": "[concat('https://raw.githubusercontent.com/mnsameer/vnet/master/',parameters('environment'),'deploy.json')]",
    "ParameterUrl": "https://raw.githubusercontent.com/mnsameer/vnet/master/parameter.json"
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "Nested_Template",
      "type": "Microsoft.Resources/deployments",
      
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('TemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[variables('ParameterUrl')]",
          "contentVersion": "1.0.0.0"
        }
        
      }
    }
  ]
}
